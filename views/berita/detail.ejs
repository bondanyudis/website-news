      <div class="col-lg-10" style="text-align:justify">

        <!-- Title -->
        <h1 class="mt-4"><%= data[0].title %></h1>

        <!-- Author -->
        <p class="lead">
          by
          <a href="#"><%= data[0].author_name %></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on <%=
          moment(data[0].created_at).format('DD MMM YYYY hh:mm:ss')
          %></p>

        <hr>

        <!-- Preview Image -->
        <div class="contents"><%- data[0].contents %></div>

        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
          <h2 class="card-header">Comment</h5>
            <div class="card-body">
              <form>
                <div class="form-group">
                  <textarea class="form-control" rows="3"></textarea>
